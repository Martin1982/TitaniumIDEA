<idea-plugin version="2">
  <id>nl.martindekeijzer.titanium</id>
  <name>Appcelerator Titanium Plugin</name>
  <version>1.0</version>
  <vendor email="martin@dreamworxmedia.com" url="http://www.martindekeijzer.nl">Martin de Keijzer</vendor>

  <description>Provides integration for Appcelerator Titanium Projects</description>
  <category>Custom Languages</category>

  <change-notes><![CDATA[
      First version
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <sdkType implementation="nl.martindekeijzer.titaniumjide.sdk.TitaniumSdkType"/>

    <editorSmartKeysConfigurable instance="nl.martindekeijzer.titaniumjide.settings.TitaniumConfigurationPage"/>
    <defaultLiveTemplatesProvider implementation="nl.martindekeijzer.titaniumjide.TitaniumTemplatesProvider"/>
    <lang.syntaxHighlighterFactory key="Titanium" implementationClass="nl.martindekeijzer.titaniumjide.lang.TitaniumSyntaxHighlighterFactory"/>

    <directoryProjectGenerator implementation="nl.martindekeijzer.titaniumjide.TitaniumProjectGenerator"/>
    <projectTemplatesFactory implementation="nl.martindekeijzer.titaniumjide.TitaniumTemplateFactory"/>

    <applicationService serviceInterface="nl.martindekeijzer.titaniumjide.settings.TitaniumConfig"
                        serviceImplementation="nl.martindekeijzer.titaniumjide.settings.TitaniumConfig" />
    <applicationConfigurable instance="nl.martindekeijzer.titaniumjide.settings.TitaniumSDKConfigurable"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>